{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "src/*.spec.ts",
    "src/**/*.spec.ts"
  ]
}
