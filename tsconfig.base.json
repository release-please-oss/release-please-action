{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build",
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "system-test/*.ts"
  ],
  "exclude": [
    "test/*.jest.ts",
    "test/**/*.jest.ts"
  ]
}
